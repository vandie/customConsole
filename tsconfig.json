{
  "compilerOptions": {
    "target": "ES2017",
    "module": "esnext",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "dist",
    "moduleResolution": "node",
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules"]
}
